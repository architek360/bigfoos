%nav.navbar.navbar-default.navbar-fixed-top{:role => 'navigation'}
  .navbar-header
    %button.navbar-toggle{:type => 'button',:data => {toggle: 'collapse', target:'#main-nav'}}
      %span.sr-only Toggle Navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: '#'} BigFoos

  .collapse.navbar-collapse{:id => 'main-nav'}
    %ul.nav.navbar-nav
      = nav_link "<i class='icon icon-group'></i> Users".html_safe, users_path
      = nav_link "<i class='icon icon-flag'></i> Games".html_safe, games_path
      = nav_link "<i class='icon icon-trophy'></i> Stats".html_safe, stats_path
      = nav_link "<i class='icon icon-list-alt'></i> Rankings".html_safe, rankings_path
      = nav_link "<i class='icon icon-ok-circle'></i> Achievements".html_safe, achievements_path
    %ul.nav.navbar-nav.user-controls.pull-right
      - if user_signed_in?
        %i.icon.icon-person
        %img{src: current_user.gravatar_url(size:40), alt:'',class: 'pull-left', style: 'margin-top: 5px'}
        %li
          = link_to (current_user.name.html_safe), current_user
        %li= link_to "<i class='icon icon-signin'></i> Sign out".html_safe, destroy_user_session_path, :method => :delete
      - else
        %li= link_to "<i class='icon icon-signout'></i> Sign in".html_safe, user_omniauth_authorize_path(:google_oauth2)#new_user_session_path
        %li
